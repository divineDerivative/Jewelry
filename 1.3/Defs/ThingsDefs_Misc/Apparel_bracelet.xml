<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <ThingDef Name="K_Bracelet" ParentName="ApparelBase" Abstract="True">
    <thingCategories>
      <li>K_Jewelry</li>
    </thingCategories>
    <apparel>
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <bodyPartGroups>
        <li>LeftHand</li>
      </bodyPartGroups>
      <layers>
        <li>Accessories</li>
      </layers>
      <tags>
        <li>Jewelry</li>
        <li>RoyalTier2</li>
      </tags>
    </apparel>
    <tradeTags>
      <li>ExoticMisc</li>
    </tradeTags>
    <statBases Inherit="False">
      <MaxHitPoints>150</MaxHitPoints>
      <Flammability>0</Flammability>
      <DeteriorationRate>0</DeteriorationRate>
    </statBases>
  </ThingDef>

  <ThingDef ParentName="K_Bracelet">
    <defName>Jewelry_Bracelet</defName>
    <label>gold bracelet</label>
    <description>A beautiful bracelet made from gold and a priceless gem. It improves the wearer's social skill and beauty.</description>
    <graphicData>
      <texPath>Items/Apparel/Bracelet/JewelleryBracelet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <statBases>
      <Mass>0.06</Mass>
      <EquipDelay>0.2</EquipDelay>
      <Beauty>15</Beauty>
      <MarketValue>250</MarketValue>
      <WorkToMake>4000</WorkToMake>
    </statBases>
    <equippedStatOffsets>
      <PawnBeauty>+1</PawnBeauty>
      <SocialImpact>0.05</SocialImpact>
    </equippedStatOffsets>
    <!-- ===== Recipe ===== -->
    <costStuffCount>10</costStuffCount>
    <stuffCategories>
      <li>Gemstones</li>
    </stuffCategories>
    <costList>
      <Gold>2</Gold>
    </costList>
    <recipeMaker>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <effectWorking>CutStone</effectWorking>
      <soundWorking>Recipe_MakeStoneBlocks</soundWorking>
      <recipeUsers>
        <li>LaserTableSculpting</li>
        <li>TableSculpting</li>
      </recipeUsers>
      <researchPrerequisite>Jewelry</researchPrerequisite>
      <workSkill>Artistic</workSkill>
      <skillRequirements>
        <Crafting>5</Crafting>
        <Artistic>5</Artistic>
      </skillRequirements>
      <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
    </recipeMaker>
  </ThingDef>

