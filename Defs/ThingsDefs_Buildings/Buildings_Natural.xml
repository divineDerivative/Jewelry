<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="RockBase">
    <defName>MineableDiamond</defName>
    <label>diamond</label>
    <graphicData>
      <texPath>Things/Building/Linked/RockFlecked_Atlas</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <color>(107, 97, 97)</color>
      <colorTwo>(78,177,190)</colorTwo>
    </graphicData>
    <statBases>
      <MaxHitPoints>1600</MaxHitPoints>
    </statBases>
    <description>Rock containing bits of diamond.</description>
    <building>
      <isResourceRock>true</isResourceRock>
      <mineableThing>Diamond</mineableThing>
      <mineableYield>20</mineableYield>
      <mineableScatterCommonality>0.06</mineableScatterCommonality>
      <mineableScatterLumpSizeRange>2~5</mineableScatterLumpSizeRange>
    </building>
  </ThingDef>

