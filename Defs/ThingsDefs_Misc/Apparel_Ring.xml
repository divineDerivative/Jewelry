<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <ThingDef Name="K_Ring" ParentName="ApparelBase" Abstract="True">
    <thingCategories>
      <li>K_Jewelry</li>
    </thingCategories>
    <apparel>
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <careIfWornByCorpse>false</careIfWornByCorpse>
      <careIfDamaged>false</careIfDamaged>
      <wearPerDay>0</wearPerDay>
      <bodyPartGroups>
        <li>RightHand</li>
      </bodyPartGroups>
      <layers>
        <li>Accessories</li>
      </layers>
      <tags>
        <li>Jewelry</li>
      </tags>
    </apparel>
    <tradeTags>
      <li>ExoticMisc</li>
    </tradeTags>
    <statBases Inherit="False">
      <MaxHitPoints>150</MaxHitPoints>
      <Flammability>0</Flammability>
      <DeteriorationRate>0</DeteriorationRate>
    </statBases>
  </ThingDef>

  <ThingDef ParentName="K_Ring">
    <defName>Jewelry_Ring</defName>
    <label>gold ring</label>
    <description>A beautiful ring made from gold and a priceless gem. It improves the wearer's social impact.</description>
    <graphicData>
      <texPath>Items/Apparel/Ring/JewelleryRing</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <statBases>
      <Mass>0.06</Mass>
      <EquipDelay>0.2</EquipDelay>
      <Beauty>15</Beauty>
      <MarketValue>150</MarketValue>
      <WorkToMake>2500</WorkToMake>
    </statBases>
    <equippedStatOffsets>
      <SocialImpact>0.05</SocialImpact>
    </equippedStatOffsets>
    <!-- ===== Recipe ===== -->
    <costStuffCount>5</costStuffCount>
    <stuffCategories>
      <li>Gemstones</li>
    </stuffCategories>
    <costList>
      <Gold>1</Gold>
    </costList>
    <recipeMaker>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <effectWorking>CutStone</effectWorking>
      <soundWorking>Recipe_MakeStoneBlocks</soundWorking>
      <recipeUsers>
        <li>LaserTableSculpting</li>
        <li>TableSculpting</li>
      </recipeUsers>
      <researchPrerequisite>Jewelry</researchPrerequisite>
      <workSkill>Artistic</workSkill>
      <skillRequirements>
        <Crafting>5</Crafting>
        <Artistic>5</Artistic>
      </skillRequirements>
      <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
    </recipeMaker>
  </ThingDef>

